{
  "name": "a2p-protocol",
  "private": true,
  "description": "a2p Protocol - User-Owned Profiles for AI Agents",
  "repository": {
    "type": "git",
    "url": "https://github.com/a2p-protocol/a2p.git"
  },
  "workspaces": [
    "packages/sdk/*",
    "packages/adapters/*/*",
    "packages/tools/*/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "precommit": "pre-commit run --all-files",
    "precommit:install": "pre-commit install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
