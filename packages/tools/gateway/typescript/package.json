{
  "name": "@a2p/gateway",
  "version": "0.1.0",
  "description": "Reference a2p gateway server implementation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "a2p-gateway": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "tsx watch src/cli.ts serve",
    "start": "node dist/cli.js serve",
    "test": "vitest"
  },
  "keywords": ["a2p", "gateway", "server", "profile", "agent", "api"],
  "author": "a2p Protocol Team",
  "license": "EUPL-1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/a2p-protocol/a2p.git",
    "directory": "packages/tools/gateway/typescript"
  },
  "dependencies": {
    "@a2p/sdk": "workspace:*",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
